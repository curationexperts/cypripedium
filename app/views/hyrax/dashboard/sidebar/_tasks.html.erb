<% if can? :review, :submissions %>
  <li class="h5 nav-item"><%= t('hyrax.admin.sidebar.tasks') %></li>
  <%= menu.nav_link(hyrax.admin_workflows_path,
                    class: "nav-link",
                    onclick: "dontChangeAccordion(event);") do %>
    <span class="fa fa-flag" aria-hidden="true"></span> <span class="sidebar-action-text"><%= t('hyrax.admin.sidebar.workflow_review') %></span>
  <% end %>
<% end %>

<% if can? :manage, User %>
  <%= menu.nav_link(hyrax.admin_users_path,
                    class: "nav-link",
                    onclick: "dontChangeAccordion(event);") do %>
    <span class="fa fa-user" aria-hidden="true"></span> <span class="sidebar-action-text"><%= t('hyrax.admin.sidebar.users') %></span>
  <% end %>
<% end %>

<% if can? :read, :admin_dashboard %>
    <%= menu.nav_link(main_app.creators_path,
                      class: "nav-link",
                      onclick: "dontChangeAccordion(event);") do %>
      <span class="fa fa-address-card" aria-hidden="true"></span> <span class="sidebar-action-text"><%= t('hyrax.creators.index.manage_creators') %></span>
    <% end %>

  <%= menu.nav_link(hyrax.embargoes_path,
                    class: "nav-link",
                    onclick: "dontChangeAccordion(event);") do %>
    <span class="fa fa-lock" aria-hidden="true"></span> <span class="sidebar-action-text"><%= t('hyrax.embargoes.index.manage_embargoes') %></span>
  <% end %>

  <%= menu.nav_link(hyrax.leases_path,
                    class: "nav-link",
                    onclick: "dontChangeAccordion(event);") do %>
    <span class="fa fa-hourglass-half" aria-hidden="true"></span> <span class="sidebar-action-text"><%= t('hyrax.leases.index.manage_leases') %></span>
  <% end %>
<% end %>
